{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Template Configuration",
  "description": "Configuration schema for the Pipeline Template Generator",
  "type": "object",
  "properties": {
    "appName": {
      "type": "string",
      "description": "Name of the application to generate"
    },
    "basePackage": {
      "type": "string",
      "description": "Base package name for the generated Java code (e.g., com.example)",
      "pattern": "^[a-z][a-z0-9_]*(\\.[a-z0-9_]+)*$"
    },
    "transport": {
      "type": "string",
      "description": "Global transport for generated adapters",
      "enum": ["GRPC", "REST", "LOCAL"],
      "default": "GRPC"
    },
    "runtimeLayout": {
      "type": "string",
      "description": "Target runtime layout intent for generated runtime-mapping files",
      "enum": ["MODULAR", "PIPELINE_RUNTIME", "MONOLITH", "modular", "pipeline-runtime", "monolith"],
      "default": "MODULAR"
    },
    "steps": {
      "type": "array",
      "description": "List of pipeline steps to generate",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the step (e.g., Process Customer)"
          },
          "cardinality": {
            "type": "string",
            "description": "Cardinality of the step",
            "enum": ["ONE_TO_ONE", "EXPANSION", "REDUCTION", "SIDE_EFFECT", "MANY_TO_MANY"]
          },
          "inputTypeName": {
            "type": "string",
            "description": "Name of the input type (plural if reduction)"
          },
          "inputFields": {
            "type": "array",
            "description": "List of fields in the input type",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the field"
                },
                "type": {
                  "type": "string",
                  "description": "Java type of the field",
                  "anyOf": [
                    {
                      "enum": ["String", "Integer", "Long", "Double", "Boolean", "UUID", "BigDecimal", "Currency", "Path", "LocalDateTime", "LocalDate", "OffsetDateTime", "ZonedDateTime", "Instant", "Duration", "Period", "URI", "URL", "File", "BigInteger", "AtomicInteger", "AtomicLong", "List<String>"]
                    },
                    {
                      "type": "string",
                      "pattern": "^Map<[A-Z][A-Za-z0-9]*, [A-Z][A-Za-z0-9]*>$"
                    },
                    {
                      "type": "string",
                      "pattern": "^[A-Za-z][A-Za-z0-9_]*(\\.[A-Za-z][A-Za-z0-9_]*)*$",
                      "description": "Custom domain type, including types defined by other steps."
                    }
                  ]
                },
                "protoType": {
                  "type": "string",
                  "description": "Protobuf type of the field",
                  "anyOf": [
                    {
                      "enum": ["string", "int32", "int64", "double", "bool"]
                    },
                    {
                      "type": "string",
                      "pattern": "^map<[a-z][a-z0-9_]*, [a-z][a-z0-9_]*>$"
                    },
                    {
                      "type": "string",
                      "pattern": "^[A-Za-z][A-Za-z0-9_]*(\\.[A-Za-z][A-Za-z0-9_]*)*$",
                      "description": "Custom message type, including messages defined by other steps."
                    }
                  ]
                }
              },
              "required": ["name", "type", "protoType"]
            }
          },
          "outputTypeName": {
            "type": "string",
            "description": "Name of the output type (plural if expansion)"
          },
          "outputFields": {
            "type": "array",
            "description": "List of fields in the output type",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the field"
                },
                "type": {
                  "type": "string",
                  "description": "Java type of the field",
                  "anyOf": [
                    {
                      "enum": ["String", "Integer", "Long", "Double", "Boolean", "UUID", "BigDecimal", "Currency", "Path", "LocalDateTime", "LocalDate", "OffsetDateTime", "ZonedDateTime", "Instant", "Duration", "Period", "URI", "URL", "File", "BigInteger", "AtomicInteger", "AtomicLong", "List<String>"]
                    },
                    {
                      "type": "string",
                      "pattern": "^Map<[A-Z][A-Za-z0-9]*, [A-Z][A-Za-z0-9]*>$"
                    },
                    {
                      "type": "string",
                      "pattern": "^[A-Za-z][A-Za-z0-9_]*(\\.[A-Za-z][A-Za-z0-9_]*)*$",
                      "description": "Custom domain type, including types defined by other steps."
                    }
                  ]
                },
                "protoType": {
                  "type": "string",
                  "description": "Protobuf type of the field",
                  "anyOf": [
                    {
                      "enum": ["string", "int32", "int64", "double", "bool"]
                    },
                    {
                      "type": "string",
                      "pattern": "^map<[a-z][a-z0-9_]*, [a-z][a-z0-9_]*>$"
                    },
                    {
                      "type": "string",
                      "pattern": "^[A-Za-z][A-Za-z0-9_]*(\\.[A-Za-z][A-Za-z0-9_]*)*$",
                      "description": "Custom message type, including messages defined by other steps."
                    }
                  ]
                }
              },
              "required": ["name", "type", "protoType"]
            }
          }
        },
        "required": ["name", "cardinality", "inputTypeName", "inputFields", "outputTypeName", "outputFields"]
      }
    },
    "aspects": {
      "type": "object",
      "description": "Pipeline aspects - cross-cutting concerns that apply around pipeline steps. Aspect names must be lower-kebab-case and typically match the plugin module base name (e.g., persistence -> persistence-svc). Cache invalidation aspects (cache-invalidate, cache-invalidate-all) are hosted in cache-invalidation-svc.",
      "propertyNames": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*$"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether the aspect is enabled",
            "default": true
          },
          "scope": {
            "type": "string",
            "description": "Scope of the aspect application",
            "enum": ["GLOBAL", "STEPS"]
          },
          "position": {
            "type": "string",
            "description": "Position relative to the step",
            "enum": ["BEFORE_STEP", "AFTER_STEP"]
          },
          "order": {
            "type": "integer",
            "description": "Order of application (lower executes closer to the step boundary). Negative values are allowed and execute before zero-valued aspects.",
            "default": 0
          },
          "config": {
            "type": "object",
            "description": "Free-form configuration for the aspect",
            "additionalProperties": true
          }
        },
        "required": ["enabled", "scope", "position"],
        "additionalProperties": false
      }
    }
  },
  "required": ["appName", "basePackage", "steps"]
}
